PUT /_template/datasource_all
{
  "template": "data-*", 
  "order":    1, 
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 3
  },
  "mappings": {
    "_default_": { 
      "_all": {
        "enabled": false
      }
    },
    "entry":{
      "properties": {
        "device": {"type": "keyword"},
        "location": {"type": "geo_point"},
        "timestamp": {"type":"date"},
        "timestamp_record": {"type":"date"},
        "sensor": {"type":"text"},
        "license": {"type":"text"},
        "observation_value": {"type":"float"},
        "quality":{"type":"byte"},
        "height":{"type": "scaled_float",
                          "scaling_factor": 100
        }
      }
    }
  }
}
